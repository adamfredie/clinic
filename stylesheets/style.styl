@import 'normalize'
@import 'jeet'
@import '_vars'
@import 'rupture'

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

h1, h2, h3, h4 ,h5, h6
	margin 0
	padding 0

body
	font-family lato
	background white
	color black

ul,li
	list-style none
	margin 0

.header-top
	background red
	height 200px
	padding-top 2px

.navigation
	height 160px
	background blue
	col(1/2)
	float right

.nav-list-child
	display inline

.logo-container
	background green
	height 160px
	col(1/3)

.feature-container
	background body-colour
	height 500px

.map-container
	background rebeccapurple
	height 400px

.footer-container
	background #22272a
	height 40px
	color white

.social-list-child
	display inline

.social-container
	col(1/2)

.address
	col(1/4)
	float right

.social-icon > svg
	height 40px
	width 40px

